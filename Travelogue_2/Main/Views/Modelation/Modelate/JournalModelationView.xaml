                <Button x:Name="DeletePageJournalButton" 
                        Style="{StaticResource circleButtonDeleteStyle}"
                        HorizontalOptions="StartAndExpand"  Text="&#xea0b;" FontFamily="{StaticResource Icon}"/>


                <CollectionView>


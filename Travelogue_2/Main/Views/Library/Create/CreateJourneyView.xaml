<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:border="clr-namespace:Syncfusion.XForms.Border;assembly=Syncfusion.Core.XForms" 
             xmlns:autocomplete="clr-namespace:Syncfusion.SfAutoComplete.XForms;assembly=Syncfusion.SfAutoComplete.XForms"
             x:Class="Travelogue_2.Main.Views.Library.Create.CreateJourneyView"
             Shell.PresentationMode="ModalAnimated"
             x:Name="CreateJourneyViewName">

    <ContentPage.Content>
        <ScrollView Margin="10,10,10,5">

            <StackLayout>

                <border:SfBorder BorderColor="{StaticResource Grey}" BorderWidth="2" CornerRadius="10">
                    <border:SfBorder.DashArray>
                        <x:Array Type="{x:Type x:Double}">
                            <x:Double>3</x:Double>
                            <x:Double>4</x:Double>
                        </x:Array>
                    </border:SfBorder.DashArray>

                    <border:SfBorder.Content >
                        
                        <Image HeightRequest="{Binding CoverImageHeight}" Source="{Binding CoverImage.ImageSour}"/>

                    </border:SfBorder.Content>

                    <border:SfBorder.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AddCoverCommand}"/>
                    </border:SfBorder.GestureRecognizers>
                    
                </border:SfBorder>

                <Frame HasShadow="True" Margin="5" Padding="5">
                    <StackLayout>
                        <Label Text="Titulo" FontSize="Large" TextColor="{StaticResource Primary}"/>
                        <Entry Text="{Binding Title, Mode=TwoWay}" FontSize="Medium" />
                    </StackLayout>
                </Frame>

                <Frame HasShadow="True" Margin="5" Padding="5">
                    <StackLayout>
                        <Label Text="Fechas" FontSize="Large" TextColor="{StaticResource Primary}"/>
                        <StackLayout Orientation="Horizontal">

                            <Label Text="&#xea0a;" FontFamily="{StaticResource Icon}"  FontSize="Medium" TextColor="{StaticResource Primary}" VerticalTextAlignment="Center"/>
                            <DatePicker Format="{Binding Resources[DateFormat]}"
                                        x:Name="IniDatePicker"
                                        Date="{Binding IniDate, Mode=TwoWay}"
                                        MinimumDate="{Binding MinimumDate}"
                                        DateSelected="CheckNewIniDate" HorizontalOptions="FillAndExpand"/>  
                            <Label Text="&#xea0a;" FontFamily="{StaticResource Icon}"  FontSize="Medium" TextColor="{StaticResource Primary}" VerticalTextAlignment="Center"/>
                            <DatePicker Format="{Binding Resources[DateFormat]}"
                                        x:Name="EndDatePicker"
                                        Date="{Binding EndDate, Mode=TwoWay}"
                                        MinimumDate="{Binding MinimumDate}"
                                        DateSelected="CheckNewEndDate" HorizontalOptions="FillAndExpand"/>

                        </StackLayout>

                        <!--CollectionView ItemsSource="{Binding DaysSelected}"  HeightRequest="100">

                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="5"/>
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <local:DayCardView BindingContext="{Binding .}"/>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>

                        </-->

                    </StackLayout>
                </Frame>

                <Frame HasShadow="True" Margin="5" Padding="8">
                    <StackLayout>
                        <Label Text="Destinos" FontSize="Large" TextColor="{StaticResource Primary}"/>
                        <StackLayout Orientation="Horizontal">

                            <autocomplete:SfAutoComplete x:Name="AutocompleteDestiny"
                                                         DataSource="{Binding DestiniesList}"
                                                         NoResultsFoundText="{Binding Resources[NoResultsFound]}"
                                                         Text="{Binding DestinyText, Mode=TwoWay}"
                                                         SuggestionBoxPlacement="Top"
                                                         Watermark="{Binding Resources[EnterADestiny]}"
                                                         HorizontalOptions="FillAndExpand"/>
                            <Button x:Name="AddDestinyButton"
                                    Command="{Binding AddDestinyCommand}"
                                    IsEnabled="{Binding CorrectDestinyText}"
                                    Text="&#xea0a;" FontFamily="{StaticResource Icon}"  FontSize="Medium"/>
                        </StackLayout>

                        <StackLayout BindableLayout.ItemsSource="{Binding DestiniesSelected}">

                            <BindableLayout.ItemTemplate>
                                <DataTemplate>

                                    <StackLayout>
                                        <AbsoluteLayout>

                                            <Frame>
                                                <StackLayout>
                                                    <Label x:Name="DestinyName" FontSize="Medium" 
                                                        Text="{Binding .Destiny}"/>
                                                    <Grid x:Name="DestinyInfo">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="4*" />
                                                            <ColumnDefinition Width="7*" />
                                                        </Grid.ColumnDefinitions>

                                                        <Image x:Name="FlagImage"  
                                                            Source="{Binding .Flag}"
                                                            Aspect="AspectFill" Grid.Column="0" HeightRequest="50" />

                                                        <StackLayout Grid.Column="1">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Label Grid.Column="0"
                                                                    FontSize="Medium"
                                                                    Text="{Binding BindingContext.Resources[Name], Source={x:Reference CreateJourneyViewName}}" />
                                                                <Label Grid.Column="1"
                                                                    x:Name="CountryName"
                                                                    FontSize="Medium" 
                                                                    Text="{Binding .Destiny}"/>

                                                            </Grid>

                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Label Grid.Column="0"
                                                                    FontSize="Medium"
                                                                    Text="{Binding BindingContext.Resources[Currency], Source={x:Reference CreateJourneyViewName}}" />
                                                                <Label Grid.Column="1"
                                                                    x:Name="Currency"
                                                                    FontSize="Medium"
                                                                    Text="{Binding .Currency}" />

                                                            </Grid>

                                                            <Label Grid.Column="0"
                                                                FontSize="Medium"
                                                                TextColor="#3D6D9B"
                                                                x:Name="DestinyURL"
                                                                Text="{Binding .MoreInfoCountry}">
                                                                <Label.GestureRecognizers>
                                                                    <TapGestureRecognizer Command="{Binding BindingContext.MoreInfoCommand, Source={x:Reference CreateJourneyViewName}}"
                                                                                        CommandParameter="{Binding .MoreInfoCountry}"/>
                                                                </Label.GestureRecognizers>
                                                            </Label>
                                                        </StackLayout>

                                                    </Grid>
                                                </StackLayout>
                                            </Frame>

                                            <Button x:Name="DeleteJourneyButton" 
                                                Style="{StaticResource circleButtonDeleteStyle}"
                                                BackgroundColor="{StaticResource None}"
                                                FontSize="Medium"
                                                HorizontalOptions="StartAndExpand"  Text="&#xea0f;" FontFamily="{StaticResource Icon}" 
                                                Command="{Binding BindingContext.DestinyTappedDelete, Source={x:Reference CreateJourneyViewName}}"
                                                CommandParameter="{Binding .}"/>

                                        </AbsoluteLayout>
                                    </StackLayout>

                                </DataTemplate>
                            </BindableLayout.ItemTemplate>

                        </StackLayout>

                        <!--CollectionView x:Name="DestiniesCollection" ItemsSource="{Binding DestiniesSelected}" ItemSizingStrategy="MeasureAllItems"
                                        HeightRequest="{Binding DestiniesSelectedHeight, Mode=TwoWay}">

                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <AbsoluteLayout>

                                            <Frame>
                                                <StackLayout>
                                                    <Label x:Name="DestinyName" FontSize="Medium" 
                                                        Text="{Binding .Destiny}"/>
                                                    <Grid x:Name="DestinyInfo">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="4*" />
                                                            <ColumnDefinition Width="7*" />
                                                        </Grid.ColumnDefinitions>

                                                        <Image x:Name="FlagImage"  
                                                            Source="{Binding .Flag}"
                                                            Aspect="AspectFill" Grid.Column="0" HeightRequest="50" />

                                                        <StackLayout Grid.Column="1">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Label Grid.Column="0"
                                                                    FontSize="Medium"
                                                                    Text="{Binding BindingContext.Resources[Name], Source={x:Reference CreateJourneyViewName}}" />
                                                                <Label Grid.Column="1"
                                                                    x:Name="CountryName"
                                                                    FontSize="Medium" 
                                                                    Text="{Binding .Destiny}"/>

                                                            </Grid>

                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Label Grid.Column="0"
                                                                    FontSize="Medium"
                                                                    Text="{Binding BindingContext.Resources[Currency], Source={x:Reference CreateJourneyViewName}}" />
                                                                <Label Grid.Column="1"
                                                                    x:Name="Currency"
                                                                    FontSize="Medium"
                                                                    Text="{Binding .Currency}" />

                                                            </Grid>

                                                            <Label Grid.Column="0"
                                                                FontSize="Medium"
                                                                TextColor="#3D6D9B"
                                                                x:Name="DestinyURL"
                                                                Text="{Binding .MoreInfoCountry}">
                                                                <Label.GestureRecognizers>
                                                                    <TapGestureRecognizer Command="{Binding BindingContext.MoreInfoCommand, Source={x:Reference CreateJourneyViewName}}"
                                                                                        CommandParameter="{Binding .MoreInfoCountry}"/>
                                                                </Label.GestureRecognizers>
                                                            </Label>
                                                        </StackLayout>

                                                    </Grid>
                                                </StackLayout>
                                            </Frame>

                                            <Button x:Name="DeleteJourneyButton" 
                                                Style="{StaticResource circleButtonDeleteStyle}"
                                                BackgroundColor="{StaticResource None}"
                                                FontSize="Medium"
                                                HorizontalOptions="StartAndExpand"  Text="&#xea0f;" FontFamily="{StaticResource Icon}" 
                                                Command="{Binding BindingContext.DestinyTappedDelete, Source={x:Reference CreateJourneyViewName}}"
                                                CommandParameter="{Binding .}"/>

                                        </AbsoluteLayout>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>

                        </-->
                    </StackLayout>
                </Frame>

                <StackLayout Orientation="Horizontal">
                    <Button Text="{Binding Resources[Cancel]}" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
                    <Button Text="{Binding Resources[Save]}" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
                </StackLayout>

            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
    
</ContentPage>
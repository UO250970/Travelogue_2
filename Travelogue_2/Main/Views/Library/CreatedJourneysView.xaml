<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Travelogue_2.Main.Views.Library.CreatedJourneysView"
             xmlns:local="clr-namespace:Travelogue_2.Main.Views.Fragments"
             x:Name="CreatedJourneysViewName">

    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="{DynamicResource PrimaryFaded}">

            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackLayout Padding="10,10,10,5" Grid.Row="0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="{Binding Resources[CreatedJourneys]}" FontSize="Title" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                        <Label Grid.Column="1" Text="&#x1f50d;" FontFamily="{StaticResource Icon}" FontSize="Large"  VerticalTextAlignment="Center" HorizontalOptions="Center"
                               TextColor="{StaticResource White}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding SearchJourneyCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>

                    <SearchBar IsVisible="{Binding SearchVisible}" Placeholder="{Binding Resources[SearchJourney]}" Text="{Binding SearchText, Mode=TwoWay}"/>


                </StackLayout>

                <CollectionView Grid.Row="1" x:Name="CreatedJourneysCollection"
                                    ItemsSource="{Binding JourneysCreatedSearched}"
                                    SelectionMode="Single"
                                    SelectionChangedCommand="{Binding JourneyTapped}"
                                    SelectionChangedCommandParameter="{Binding SelectedItem, Source={x:Reference CreatedJourneysCollection}}">

                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical"
                                        Span="2"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.EmptyView>
                        <Label Text="{Binding Resources[CreatedEmpty]}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>

                            <AbsoluteLayout>

                                <local:JourneyBookView BindingContext="{Binding .}"/>

                                <Button x:Name="DeleteJourneyButton" 
                                            Style="{StaticResource smallCircleButtonStyle}"
                                            BackgroundColor="{StaticResource None}"
                                            HorizontalOptions="StartAndExpand"  Text="&#xea0f;" FontFamily="{StaticResource Icon}" 
                                            Command="{Binding BindingContext.JourneyTappedDelete, Source={x:Reference CreatedJourneysViewName}}"
                                            CommandParameter="{Binding .}"/>

                            </AbsoluteLayout>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </Grid>

            <Button x:Name="CreateJourneyButton" 
                    Style="{StaticResource circleButtonAddStyle}"
                    Command="{Binding CreateJourneyCommand}"
                    HorizontalOptions="StartAndExpand"  Text="&#xea0a;" FontFamily="{StaticResource Icon}" />
        </AbsoluteLayout>
    </ContentPage.Content>

</ContentPage>
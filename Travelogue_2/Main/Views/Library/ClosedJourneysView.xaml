<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Travelogue_2.Main.Views.Library.ClosedJourneysView"
             xmlns:local="clr-namespace:Travelogue_2.Main.Views.Fragments">

    <ContentPage.Content>
        <Grid Padding="10,10,10,5">
            
            <ScrollView VerticalScrollBarVisibility="Default">

                <StackLayout>

                    <Button Text="{Binding Resources[ClosedJourneys]}"
                            IsEnabled="False"/>

                    <CollectionView ItemsSource="{Binding JourneysCreated}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical"
                                            Span="2" />
                        </CollectionView.ItemsLayout>
                        
                        <CollectionView.EmptyView>
                            <Label Text="{Binding Resources[ClosedEmpty]}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                        </CollectionView.EmptyView>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <local:JourneyBookView BindingContext="{Binding .}"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                </StackLayout>
                
            </ScrollView>
            
        </Grid>
    </ContentPage.Content>

</ContentPage>